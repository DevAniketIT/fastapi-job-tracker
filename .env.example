# FastAPI Job Tracker - Environment Variables Example
# Copy this file to .env and update values for local development

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/jobtracker

# Application Settings
ENVIRONMENT=development
DEBUG=true
HOST=0.0.0.0
PORT=8000

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Settings (for production and development)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,https://your-frontend-domain.com

# Production Environment Variables (for Render.com)
# These should be set in Render's environment variables dashboard:
# PYTHON_VERSION=3.11
# PYTHONPATH=.
# PYTHONUNBUFFERED=1

# API Configuration
API_VERSION=1.0.0
API_TITLE="Job Application Tracker API"
API_DESCRIPTION="A comprehensive API for tracking job applications"

# Database Pool Settings (optional)
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# Logging Level
LOG_LEVEL=INFO

# Email Configuration (if implementing email features)
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password

# External API Keys (if needed)
# OPENAI_API_KEY=your-openai-key
# GITHUB_API_TOKEN=your-github-token

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_ANALYTICS=true
